datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  listings Listing[]
}

model Listing {
  id          String   @id @default(cuid())
  category    String
  location    String
  rooms       Int
  description String
  price       Float
  createdAt   DateTime
  updatedAt   DateTime @updatedAt
  userId      Int

  user User @relation(fields: [userId], references: [id])
}
