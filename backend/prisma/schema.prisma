datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  listings Listing[]
}

model Listing {
  id           Int      @id @default(autoincrement())
  category     String
  country      String
  city         String
  address      String
  postalNumber Int
  beds         Int
  bedRoom      Int
  livingRoom   Int
  wc           Int
  listingName  String
  Amenities    String[]
  description  String
  price        Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       Int

  user User @relation(fields: [userId], references: [id])
}
